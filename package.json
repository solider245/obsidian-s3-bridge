{
	"name": "obsidian-s3-bridge",
	"version": "1.1.1",
	"description": "Automatically upload pasted images/files to S3-compatible storage (AWS S3 / Cloudflare R2 / MinIO) and insert accessible links in your notes.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "npx tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:unit": "vitest run tests/unit",
		"test:behavior": "vitest run tests/behavior",
		"lint": "eslint . --ext .ts,.js",
		"lint:fix": "eslint . --ext .ts,.js --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"format:lint": "npm run format && npm run lint:fix",
		"ci": "npm run format:check && npm run lint && npm run test && npm run build"
	},
	"keywords": [
		"obsidian",
		"s3",
		"r2",
		"minio",
		"upload",
		"paste",
		"image",
		"cloud",
		"storage"
	],
	"author": "solider245",
	"license": "MIT",
	"devDependencies": {
		"@types/jest": "^30.0.0",
		"@types/node": "^24.2.0",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"jest": "^30.0.5",
		"obsidian": "latest",
		"prettier": "^3.6.2",
		"ts-jest": "^29.4.1",
		"tslib": "2.4.0",
		"typescript": "4.7.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.862.0",
		"@aws-sdk/s3-request-presigner": "^3.862.0",
		"undici": "^7.13.0"
	}
}
